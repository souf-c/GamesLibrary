<%- include('partials/headerlogged'); %>
<div class="container">
    <div id="searchbar">
        <form action="/search" method="post">
            <h3>Search for a game to add</h3>
            <input type="text" name="searchbar" autocomplete="off" class="search">
            <input type="submit" value="Search" class="searchButton">
        </form>
    </div>
    <div class="games">
        <% posts.forEach(post => { %>
            <div class="game">
                <a href="/<%= post.title %>">
                    <img src="<%= post.image %>" alt="game cover image">
                </a>
                <div class="title"><%= post.title %></div>
            </div>
        <% }); %>
    </div>
</div>
<%- include('partials/footer'); %>